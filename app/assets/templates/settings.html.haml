%section.edit-settings
  %h2 Display options
  %fieldset
    .form-group
      %label.label-control{for:'showThumbnails'} Show thumbnails
      .form-control
        %input#showThumbnails.form-control{type:'checkbox', 'ng-model' => 'settings.showThumbnails'}

  %h2 Ranking options
  %fieldset
    .form-group
      %label.label-control{for:'sortOrder'} Default sort order
      .form-control
        %select#sortOrder{'ng-model' => 'settings.defaultSort'}
          %option{value: 'byDate'} Most Recent First
          %option{value: 'byPopularity'} Most Popular First
    .form-group
      %label.label-control{for:'dateRange'} Default date range
      .form-control
        %select#dateRange{'ng-model' => 'settings.defaultDateRange'}
          %option{value: 'last24h'} Last 24h
          %option{value: 'pastWeek'} Past Week
          %option{value: 'pastMonth'} Past Month
          %option{value: 'all'} Forever

  %h2 Your options
  %fieldset
    .form-group
      %label.label-control{for: 'login'} Your HN login
      .form-control
        %input#login.form-control{type: 'text','ng-model' => 'settings.login'}
