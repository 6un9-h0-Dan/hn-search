.modal.fade#modal-advanced-syntax
  .modal-dialog
    .modal-content
      .modal-header
        %button{type: "button", class: "close", "data-dismiss" => "modal", "aria-hidden" => true} &times;
        %h4.modal-title Advanced search syntax
      .modal-body
        %ul.list-unstyled
          %li Use <code>"</code> to match a particular sequence of terms <code>"search engine"</code>,
          %li Use <code>-</code> to ensure a word won't appear in the result set <code>search -optimization</code>,
          %li Use <code>author:USERNAME</code> or <code>by:USERNAME</code> to filter by author,
          %li Use <code>story:ID</code> to filter by story,
          %li Use <code>points&gt;NUMBER</code> or <code>points&lt;NUMBER</code> to filter by points,
          %li Use <code>date&gt;TIMESTAMP</code> or <code>date&lt;TIMESTAMP</code> to filter by date.

#search-panel
  #style-toggler.hidden-xs
    = link_to_function 'Change style <span></span>'.html_safe, 'hnsearch.toggleStyle();'

  %form#search-form{method: "get", action: '#', onsubmit: 'return false;'}
    .clearfix
    %h1.text-title
      Search
      = link_to "Hacker News", "https://news.ycombinator.com"
      %span.by
        &nbsp;by
        = link_to image_tag("//d3ibatyzauff7b.cloudfront.net/assets/algolia_white.png", style: 'height: 38px; margin-bottom: 12px;', alt: 'Algolia'), "http://www.algolia.com/?utm_source=hn_search&utm_medium=link&utm_term=header&utm_campaign=hn_algolia", onclick: "_gaq.push(['_link', 'http://www.algolia.com']); return false;", title: 'Hosted full-text, numerical, faceted search'

    .pull-right.hidden-xs#advanced-search
      = link_to "Advanced search syntax", "#modal-advanced-syntax", "data-toggle" => "modal"
    %ul.list-unstyled.list-inline#item_type
      - %w{all story comment poll}.each do |type|
        %li
          %input{type: 'radio', name: 'item_type', value: type, id: "item_type_#{type}", checked: (type == 'story')}
          %label{for: "item_type_#{type}"}= type.capitalize.gsub('_', ' ')
    .search_box-wrapper
      .search_box
        #inputfield
          %input{autocomplete: 'off', autocorrect: 'off', name: 'address', placeholder: 'HN Stories, Comments, Source, Author ...', type: 'text', spellcheck: 'false'}
        .searchbutton
          %i.fa.fa-search
        .branding.visible-lg
          Discover the
          = link_to "realtime search engine", "http://www.algolia.com/?utm_source=hn_search&utm_medium=link&utm_term=discover&utm_campaign=hn_algolia"
          providing HN Search.
    .text-right
      #time.visible-xs
        = link_to_function '<small>Time <span class="caret"></span></small>'.html_safe, '$("#created_at").toggleClass("opened")'
      %ul.list-unstyled.list-inline#created_at
        - %w{last_24h past_week past_month forever sort_by_date}.each do |period|
          %li
            %input{type: 'radio', name: 'created_at', value: period, id: "created_at_#{period}", checked: (period == 'forever')}
            %label{for: "created_at_#{period}"}= period.capitalize.gsub('_', ' ')

  #stats
  #hits
  #noresults.text-center
  #pagination.text-center
  #history.text-center
    %small <strong>#{number_with_delimiter(Item.where(item_type_cd: Item.story).count) rescue 'N/A'}</strong> stories and <strong>#{number_with_delimiter(Item.where(item_type_cd: Item.comment).count) rescue 'N/A'}</strong> comments indexed

:javascript
  $(document).ready(function() {
    window.hnsearch = new HNSearch('#{ENV['ALGOLIASEARCH_APPLICATION_ID']}', '#{ENV['ALGOLIASEARCH_API_KEY_RO']}', '#{Item.index_name}', '#{User.index_name}');
  });

%script{type: "text/template", id:"hitTemplate"}
  :plain
    <div class="{{ classes }}" data-id="{{ item_id }}">
      <div class="thumb pull-left hidden-xs">
        <img src="//drcs9k8uelb9s.cloudfront.net/{{ thumb_item_id }}.png">
      </div>
      <div class="title_url">
        <div class="title">
          {{#highlighted_title}}
            <a href="{{ url }}" target="_blank">{{{ highlighted_title }}}</a>
            {{#highlighted_url}}
              ({{{ highlighted_url }}})
            {{/highlighted_url}}
          {{/highlighted_title}}
          {{#highlighted_story_title}}
            {{#highlighted_story_url}}
              <a href="{{ story_url }}" target="_blank">{{{ highlighted_story_title }}}</a> ({{{ highlighted_story_url }}})
            {{/highlighted_story_url}}
            {{^highlighted_story_url}}
              {{{ highlighted_story_title }}}
            {{/highlighted_story_url}}
          {{/highlighted_story_title}}
        </div>
        {{#comment_text}}
        <div class="url">
          <a href="{{ item_url }}{{#item_url_anchor}}{{ item_url_anchor }}{{/item_url_anchor}}" target="_blank">{{ item_url }}</a>
        </div>
        {{/comment_text}}
        <div class="points"><b>{{ points }}</b> point{{#points_plural}}s{{/points_plural}}</div>
        <div class="author"> by <a href="https://news.ycombinator.com/user?id={{ author }}" target="_blank">{{{ highlighted_author }}}</a></div>
        <div class="created_at"><abbr class="timeago" title="{{ created_at }}"></abbr></div>
        {{#has_comments}}
          <div class="comments">
            <a href="https://news.ycombinator.com/item?id={{ item_id }}" target="_blank">{{ comments }} comment{{#comments_plural}}s{{/comments_plural}}</a>
            <a href="/follow/{{ item_id }}">Follow</a>
          </div>
        {{/has_comments}}
        <br />
        {{#story_text}}
          <div class="story_text">{{{ story_text }}}</div>
        {{/story_text}}
        {{#comment_text}}
          <div class="comment_text">{{{ comment_text }}}</div>
        {{/comment_text}}
      </div>
      <div class="clearfix"></div>
    </div>
  </script>
